<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textview_background"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/list_item_message_name"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:maxLength="13"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:textColor="@android:color/white"
        android:paddingTop="5dp"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/list_item_send_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/ac_icon_pressed" />

        <CheckBox
        android:id="@+id/list_item_message_check_acceler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/list_item_message_check_active"
        android:button="@drawable/panic_checkbox">
    </CheckBox>
    
    <CheckBox
        android:id="@+id/list_item_message_check_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginRight="20dp" 
        android:button="@drawable/panic_checkbox">
    </CheckBox>

</RelativeLayout>