<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CommonTheme">
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>

    <style name="FieldsHeaderTheme" parent="@style/CommonTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="newWorldRadioButtonStyle" parent="@style/CommonTheme">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="EditTextFullScr" parent="@style/CommonTheme">
        <item name="android:layout_width">250dip</item>
    </style>

    <style name="CheckBoxTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dip</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">5dip</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.NotTransparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:drawable/title_bar</item>
        <item name="android:windowContentOverlay">@android:drawable/title_bar</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme_WhiteText">
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>